<%- include('partials/header') %>

  <h1> Compose </h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <!-- <label for="composeTitle">Title</label> -->
      <input type="text" name="postTitle" class="form-control" placeholder="Title" required autofocus>
    </div>
    <div class="form-group">
      <!-- <label for="composePost">Post</label> -->
      <textarea name="postBody" class="form-control" rows="5" cols="30" placeholder="Post" required></textarea>
    </div>
    <button class='btn btn-primary' type="submit" name="button">Publish</button>
  </form>

